@model EntityLayer.Concrete.Guide

@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add a New Guide Info</h1>

<form method="post">
	<div class="form-group">
		@Html.Label("Name Surname")
		<input type="text" asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<br />
	<div class="form-group">
		@Html.Label("Profil Photo")
		<input type="text" asp-for="Image" class="form-control" />
		<span asp-validation-for="Image" class="text-danger"></span>
	</div>
	<br />
	<div class="form-group">
		@Html.Label("Instagram Page")
		<input type="text" asp-for="InstaUrl" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("X Page")
		<input type="text" asp-for="XUrl" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("Description")
		<textarea cols="30" rows="5" asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<br />
	<button class="btn btn-outline-success">Create</button>
</form>

