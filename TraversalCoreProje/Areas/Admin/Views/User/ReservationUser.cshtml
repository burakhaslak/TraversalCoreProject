@using EntityLayer.Concrete
@model List<Reservation>
@{
	ViewData["Title"] = "ReservationUser";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<h1>Approved Previous Reservations' List</h1>

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Guest's Name and Surname</th>
		<th>Route</th>
		<th>No. of Person</th>
		<th>Date</th>
		<th>Detaylar</th>
	</tr>
	@foreach (var item in Model)
	{
		{ count += 1; }
		<tr>
			<td>@count</td>
			<td>###</td>
			<td>@item.Destination.City</td>
			<td>@item.PersonCount</td>
			<td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
			<td><a href="#" class="btn btn-outline-primary">Details</a></td>
		</tr>
	}
</table>

